<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar2"
    android:backgroundTint="#00B80404"
    android:backgroundTintMode="screen"
    tools:context=".ui.gallery.GalleryFragment">

    <ImageView
        android:id="@+id/imageOro"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medallaoro"
        tools:src="@drawable/medallaoro"
        tools:srcCompat="@drawable/medallaoro" />

    <ImageView
        android:id="@+id/imagePlPlata"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="204dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medallaplata"
        tools:src="@drawable/medallaplata"
        tools:srcCompat="@drawable/medallaplata" />

    <ImageView
        android:id="@+id/imageBronce"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medallabronce"
        tools:src="@drawable/medallabronce"
        tools:srcCompat="@drawable/medallabronce" />

    <ListView
        android:id="@+id/listScore"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_marginTop="392dp"
        android:background="#E6E3E3"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOro"
        android:layout_width="100dp"
        android:scrollbars = "vertical"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/fontmain"
        android:shadowColor="#1E1C1C"
        android:text="No record"
        android:textAlignment="center"
        android:textColor="#F8F8F8"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOro" />

    <TextView
        android:id="@+id/tvPlata"
        android:scrollbars = "vertical"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:fadeScrollbars="true"
        android:fontFamily="@font/fontmain"
        android:isScrollContainer="false"
        android:overScrollMode="always"
        android:shadowColor="#1E1C1C"
        android:text="No record"
        android:textAlignment="center"
        android:textColor="#FFFDFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePlPlata" />

    <TextView
        android:id="@+id/tvBronce"
        android:layout_width="100dp"
        android:scrollbars = "vertical"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/fontmain"
        android:shadowColor="#1E1C1C"
        android:text="No record"
        android:textAlignment="center"
        android:textColor="#EEE9EF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBronce" />
</androidx.constraintlayout.widget.ConstraintLayout>

